# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias bk="cd -"

# Improved listing
alias ls="ls -F"
alias l="ls"
alias la="ls -AF"
alias a="la"
alias lo="ls -AF1"
alias ll="ls -AFhl"

# Build InventoryBase from develop branch and deploy that shit
alias dbd="./devbuild && ./deploy"

# Git aliases
function git_current_branch() {
	git symbolic-ref HEAD 2> /dev/null | sed -e 's/refs\/heads\///'
}
alias gs="git status"
alias g="git status -sb"
alias gb="git branch"
alias gco="git checkout"
alias ga="git add"
alias gap="git add -p"
alias gc="git commit -v"
alias gm="git merge --no-ff"
alias grb='git rebase -p'
# alias gps="git push"
alias gpsall='git push'
alias gps='git push origin HEAD:$(git_current_branch)'
alias gfog='git push fog HEAD:master'
# alias gpl="git pull"
alias gpl="git pull --rebase"
alias gup='git fetch origin && grb origin/$(git_current_branch)' # gup instead of gpl
alias gd='git diff | subl -n'
alias gdc='git diff --cached | subl -n'
alias gk="gitk --all"
alias gl="git log --graph --pretty=format':%C(red)%h%Cgreen%d%Creset %s %C(blue) %an, %ar%Creset'"
alias gll="git log --graph --name-status --pretty=format':%C(red)%h%Cgreen%d%Creset %s %C(blue) %an, %ar%Creset'"
alias glo="git log --oneline"
function gblame() { git blame $1 | subl -n -w; }

# mkdir and cd into it
function take() { mkdir $1; cd $1; }
alias tk="take"

# Editor aliases
alias s="subl"
alias s.="subl ."

alias unixtime="echo `date +%s` && date +%s | pbcopy"

# Important directory shortcuts
alias home="cd ~"

# bashrc & vimrc
alias reload="source ~/.bashrc"
alias hosts="sudo subl -n /etc/hosts"

# Jumplist aliases
alias jl="jump list"
alias ja="jump add"
alias jd="jump delete"
function j() {
	if [ $# -eq 0 ]; then
		jump list
	else
		jump $@
	fi
}

# Todo.txt
alias t="todo.sh -d /usr/local/Cellar/todo-txt/2.9/todo.cfg"

# Apache
alias apache="sudo /usr/sbin/apachectl"
alias a2r="sudo /usr/sbin/apachectl restart"

# MySQL
function mysql() {
	if [ $# -eq 0 ]; then
		/usr/local/Cellar/mysql/5.5.25/bin/mysql -u root
	else
		/usr/local/Cellar/mysql/5.5.25/bin/mysql.server $@
	fi
}

# Restart wireless
alias resetip="sudo ipconfig set en1 BOOTP; sudo ipconfig set en1 DHCP"

# Flush DNS
alias flushdns="dscacheutil -flushcache"

# Toggle hidden files in Finder
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"

# Hide/show desktop icons
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false; killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true; killall Finder"

# Hide/show ~/Library in Finder
alias showlibrary="chflags nohidden ~/Library/"
alias hidelibrary="chflags hidden ~/Library/"

# Tail Today's FuelPHP App Log
#alias fuellog='tail -f "fuel/app/logs/`date '+%Y'`/`date '+%m'`/`date '+%d'`.php"'
alias fuellog=fuellog

function fuellog() {
	base="fuel/app/logs/`date '+%Y'`/`date '+%m'`/`date '+%d'`.php"
	if [ $# -eq 0 ]; then
		tail -f $base
	else
		search="> $@"
		tail -f $base | grep --line-buffered "$search"
	fi
}
