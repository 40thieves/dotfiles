# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias bk="cd -"

alias bitcoin="/Applications/Bitcoin.app/Contents/MacOS/bitcoin -addnode=69.164.218.197 -addnode=64.22.103.150 -addnode=173.242.112.53 -addnode=178.79.147.99 -addnode=184.106.111.41 -addnode=91.85.220.84 -addnode=173.224.125.222"

# Improved listing
alias ls="ls -F"
alias l="ls"
alias la="ls -AF"
alias a="la"
alias lo="ls -AF1"
alias ll="ls -AFhl"

# Editor aliases 
alias m="mate"
alias m.="mate ."
alias v="mvim"
alias v.="mvim ."

alias unixtime="date +%s"

# Important directory shortcuts
alias ht="cd /Library/WebServer/Sites/"
alias hm="cd ~"
alias site="cd ~/Ruby/danharper.me/"
alias dot="cd ~/.bin/dotfiles/"

# bashrc & vimrc
alias reload="source ~/.bashrc"
alias ea="mvim -f ~/.bin/dotfiles/bash/aliases && reload"
alias vimrc="mvim ~/.bin/dotfiles/vimrc"
alias hosts="sudo mvim /etc/hosts"

# Git aliases
function git_current_branch() {
	git symbolic-ref HEAD 2> /dev/null | sed -e 's/refs\/heads\///'
}
alias gs="git status"
alias g="git status"
alias gb="git branch"
alias gco="git checkout"
alias ga="git add"
alias gc="git commit -v"
alias gm="git merge --no-ff"
alias grb='git rebase -p'
# alias gps="git push"
alias gpsall='git push'
alias gps='git push origin HEAD:$(git_current_branch)'
# alias gpl="git pull"
alias gpl="git pull --rebase"
alias gup='git fetch origin && grb origin/$(git_current_branch)' # gup instead of gpl

alias gd='git diff | mvim -R -f -'
alias gk="gitk --all"
alias gl="git log"
alias glo="git log --oneline"

# nanoc aliases
alias na="nanoc aco"
alias nc="nanoc co"

# Jumplist aliases
alias jl="jump list"
alias ja="jump add"
alias jd="jump delete"
function j() {
	if [ $# -eq 0 ]; then
		jump list
	else
		jump $@
	fi
}

# mkdir and cd into it
function take() { mkdir $1; cd $1; }
alias tk="take"

# Apache
alias apache="sudo /usr/sbin/apachectl"
alias a2r="sudo /usr/sbin/apachectl restart"

# MySQL
function mysql() {
	if [ $# -eq 0 ]; then
		/usr/local/mysql/bin/mysql -u root
	else
		sudo /usr/local/mysql/support-files/mysql.server $@
	fi
}

# Restart wireless
alias resetip="sudo ipconfig set en1 BOOTP; sudo ipconfig set en1 DHCP"

# Flush DNS
alias flushdns="dscacheutil -flushcache"

# Toggle hidden files in Finder
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"

# Hide/show desktop icons
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false; killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true; killall Finder"

# Hide/show ~/Library in Finder
alias showlibrary="chflags nohidden ~/Library/"
alias hidelibrary="chflags hidden ~/Library/"

# Fix VirtualBox Error
alias fixvirtualbox="sudo /Library/StartupItems/VirtualBox/VirtualBox restart"
