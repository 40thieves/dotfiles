# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias bk="cd -"

# Improved listing
alias ls="ls -F"
alias l="ls"
alias la="ls -AF"
alias a="la"
alias lo="ls -AF1"
alias ll="ls -AFhl"

# Git aliases
function git_current_branch() {
	git symbolic-ref HEAD 2> /dev/null | sed -e 's/refs\/heads\///'
}
alias gs="git status"
alias g="git status -sb"
alias gb="git branch"
alias gco="git checkout"
alias ga="git add"
alias gap="git add -p"
alias gc="git commit -v"
alias gm="git merge --no-ff"
alias grb='git rebase -p'
# alias gps="git push"
alias gpsall='git push'
alias gps='git push origin HEAD:$(git_current_branch)'
alias gfog='git push fog HEAD:master'
# alias gpl="git pull"
alias gpl="git pull --rebase"
alias gup='git fetch origin && grb origin/$(git_current_branch)' # gup instead of gpl
alias gd='git diff'
alias gdc='git diff --cached'
alias gk="gitk --all"
alias gl="git log --graph --pretty=format':%C(red)%h%Cgreen%d%Creset %s %C(blue) %an, %ar%Creset'"
alias gll="git log --graph --name-status --pretty=format':%C(red)%h%Cgreen%d%Creset %s %C(blue) %an, %ar%Creset'"
alias glo="git log --oneline"
function gblame() { git blame $1 | subl -n -w; }

# mkdir and cd into it
function take() { mkdir $1; cd $1; }
alias tk="take"

# Mocha
alias m="mocha -R spec"

# Important directory shortcuts
alias home="cd ~"

# bashrc & vimrc
alias reload="source ~/.bashrc"

# Apache
#alias apache="sudo /usr/sbin/apachectl"
alias a2r="sudo service apache2 restart"

# nginx
alias n2r="sudo service nginx restart"

# Tail the Laravel log from the root dir
alias laralog="tail -f app/storage/logs/laravel.log"

# Start mongodb server
alias mongostart="mongod --fork --logpath /usr/local/var/log/mongodb/mongo.log --logappend"
