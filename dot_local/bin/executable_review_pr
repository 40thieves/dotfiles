#!/usr/bin/env bash
set -euo pipefail

TIMESTAMP=$(date -u +%Y-%m-%dT%H-%M)
BRANCH=$(git rev-parse --abbrev-ref HEAD)
PR_DESCRIPTION=$(gh pr view --json body -q '.body')

# echo $TIMESTAMP

review --context "$PR_DESCRIPTION" main...$BRANCH > /tmp/llm-review-$TIMESTAMP.md && open -a "Marked 2" /tmp/llm-review-$TIMESTAMP.md
